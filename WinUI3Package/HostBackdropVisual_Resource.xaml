<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI3Package">
    <Style TargetType="local:HostBackdropVisual">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HostBackdropVisual">
                    <Grid Background="Transparent" CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid x:Name="AcrylicContainer" />

                        <ContentPresenter
                            Padding="{TemplateBinding Padding}"
                            Content="{TemplateBinding Content}"
                            CornerRadius="{TemplateBinding CornerRadius}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
