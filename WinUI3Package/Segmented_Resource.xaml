            <Setter Property="IsItemClickEnabled" Value="False" />
            <Setter Property="SingleSelectionFollowsFocus" Value="False" />
            <Setter Property="IsTabStop" Value="False" />
            <Setter Property="TabNavigation" Value="Once" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <local:EqualPanel HorizontalAlignment="Left" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:Segmented">
                        <Grid Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}">
                            <Grid.Resources>
                                <Duration x:Key="AnimationDuration">0:0:0.250</Duration>
                                <x:Double x:Key="ExponentialEaseExponent">7</x:Double>
                                <Storyboard x:Name="KnobAnimation">
                                    <!--  Animate knob translate  -->
                                    <DoubleAnimation
                                        x:Name="KnobTranslateAnimation"
                                        Storyboard.TargetName="KnobTranslate"
                                        Storyboard.TargetProperty="X"
                                        Duration="{StaticResource AnimationDuration}">
                                        <DoubleAnimation.EasingFunction>
                                            <ExponentialEase EasingMode="EaseOut" Exponent="{StaticResource ExponentialEaseExponent}" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation
                                        x:Name="KnobTranslateYAnimation"
                                        Storyboard.TargetName="KnobTranslate"
                                        Storyboard.TargetProperty="Y"
                                        Duration="{StaticResource AnimationDuration}">
                                        <DoubleAnimation.EasingFunction>
                                            <ExponentialEase EasingMode="EaseOut" Exponent="{StaticResource ExponentialEaseExponent}" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>

                                    <!--  Animate knob size  -->
                                    <DoubleAnimation
                                        x:Name="KnobWidthAnimation"
                                        EnableDependentAnimation="True"
                                        Storyboard.TargetName="Knob"
                                        Storyboard.TargetProperty="Width"
                                        Duration="{StaticResource AnimationDuration}">
                                        <DoubleAnimation.EasingFunction>
                                            <ExponentialEase EasingMode="EaseOut" Exponent="{StaticResource ExponentialEaseExponent}" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation
                                        x:Name="KnobHeightAnimation"
                                        EnableDependentAnimation="True"
                                        Storyboard.TargetName="Knob"
                                        Storyboard.TargetProperty="Height"
                                        Duration="{StaticResource AnimationDuration}">
                                        <DoubleAnimation.EasingFunction>
                                            <ExponentialEase EasingMode="EaseOut" Exponent="{StaticResource ExponentialEaseExponent}" />
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>

                                <Storyboard x:Name="KnobAppearAnimation">
                                    <DoubleAnimation
                                        Storyboard.TargetName="Knob"
                                        Storyboard.TargetProperty="Opacity"
                                        From="0"
                                        To="1"
                                        Duration="{StaticResource AnimationDuration}" />
                                </Storyboard>
                            </Grid.Resources>

                            <Border
                                x:Name="Knob"
                                Background="{ThemeResource SegmentedItemBackgroundSelected}"
                                BorderBrush="{ThemeResource SegmentedItemBorderBrushSelected}"
                                BorderThickness="{ThemeResource SegmentedItemBorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Opacity="0"
                                RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="KnobTranslate" />
                                </Border.RenderTransform>
                            </Border>
                            <Border
                                VerticalAlignment="Stretch"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}" />
                            <ItemsPresenter />

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

