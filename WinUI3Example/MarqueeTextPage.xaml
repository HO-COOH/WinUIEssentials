<Page
    x:Class="WinUI3Example.MarqueeTextPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <local:ControlExample HeaderText="MarqueeText">
        <essential:MarqueeText
            x:Name="Test"
            Behavior="{x:Bind (essential:MarqueeBehavior)((ComboBoxItem)MarqueeBehaviorComboBox.SelectedItem).Tag, Mode=OneWay}"
            Direction="{x:Bind (essential:MarqueeDirection)((ComboBoxItem)MarqueeDirectionComboBox.SelectedItem).Tag, Mode=OneWay}"
            FontSize="{x:Bind FontSizeSlider.Value, Mode=OneWay}"
            IntervalSpace="{x:Bind SpaceIntervalSlider.Value, Mode=OneWay}"
            PauseOnHover="{x:Bind PauseOnHoverToggle.IsOn, Mode=OneWay}"
            Speed="{x:Bind MarqueeSpeedSlider.Value, Mode=OneWay}"
            Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
        <local:ControlExample.Options>
            <StackPanel Spacing="10">
                <Slider
                    x:Name="MarqueeSpeedSlider"
                    Header="Speed"
                    Maximum="200"
                    Value="48" />
                <Slider
                    x:Name="FontSizeSlider"
                    Header="Font Size"
                    Maximum="100"
                    Minimum="4"
                    Value="14" />
                <Slider
                    x:Name="SpaceIntervalSlider"
                    Header="Interval space(only effective on looping marquee"
                    Maximum="500"
                    Minimum="1"
                    Value="32" />

                <ComboBox
                    x:Name="MarqueeDirectionComboBox"
                    Header="Marquee Direction"
                    SelectedIndex="0">
                    <ComboBoxItem Content="Left">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeDirection>Left</essential:MarqueeDirection>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Right">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeDirection>Right</essential:MarqueeDirection>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Up">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeDirection>Up</essential:MarqueeDirection>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Down">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeDirection>Down</essential:MarqueeDirection>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>
                </ComboBox>

                <ComboBox
                    x:Name="MarqueeBehaviorComboBox"
                    Header="Marquee Behavior"
                    SelectedIndex="0">
                    <ComboBoxItem Content="Ticker">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeBehavior>Ticker</essential:MarqueeBehavior>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Looping">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeBehavior>Looping</essential:MarqueeBehavior>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>

                    <ComboBoxItem Content="Bouncing">
                        <ComboBoxItem.Tag>
                            <essential:MarqueeBehavior>Bouncing</essential:MarqueeBehavior>
                        </ComboBoxItem.Tag>
                    </ComboBoxItem>
                </ComboBox>

                <ToggleSwitch x:Name="PauseOnHoverToggle" Header="PauseOnHover" />

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Click="{x:Bind Test.Resume}">Play</Button>
                    <Button Click="{x:Bind Test.Pause}">Pause</Button>
                    <Button Click="{x:Bind Test.Reset}">Reset</Button>
                </StackPanel>
            </StackPanel>
        </local:ControlExample.Options>

        <local:ControlExample.Xaml>
            <local:CodeSource>
                <local:CodeSource.Code>
                    <x:String xml:space="preserve">&lt;essential:MarqueeText
    Behavior=&quot;{0}&quot;
    Direction=&quot;{1}&quot;
    FontSize=&quot;{2}&quot;
    IntervalSpace=&quot;{3}&quot;
    PauseOnHover=&quot;{4}&quot;
    Speed=&quot;{5}&quot;
    Text=&quot;Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.&quot; /&gt;
                    </x:String>
                </local:CodeSource.Code>
                <local:CodeSource.Substitutions>
                    <local:ControlExampleSubstitution Key="0" Value="{x:Bind local:ControlExample.UnboxString(((ComboBoxItem)MarqueeBehaviorComboBox.SelectedItem).Content), Mode=OneWay}" />
                    <local:ControlExampleSubstitution Key="1" Value="{x:Bind local:ControlExample.UnboxString(((ComboBoxItem)MarqueeDirectionComboBox.SelectedItem).Content), Mode=OneWay}" />
                    <local:ControlExampleSubstitution Key="2" Value="{x:Bind FontSizeSlider.Value, Mode=OneWay}" />
                    <local:ControlExampleSubstitution Key="3" Value="{x:Bind SpaceIntervalSlider.Value, Mode=OneWay}" />
                    <local:ControlExampleSubstitution Key="4" Value="{x:Bind local:ControlExample.BooleanToString(PauseOnHoverToggle.IsOn), Mode=OneWay}" />
                    <local:ControlExampleSubstitution Key="5" Value="{x:Bind MarqueeSpeedSlider.Value, Mode=OneWay}" />
                </local:CodeSource.Substitutions>
            </local:CodeSource>
        </local:ControlExample.Xaml>
    </local:ControlExample>

</Page>
