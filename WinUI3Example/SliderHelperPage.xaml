<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.SliderHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <local:ControlExample HeaderText="Original Slider, you don't Acrylic on the tooltip when you drag the Slider">
            <Grid>
                <essential:AcrylicVisual />
                <StackPanel Orientation="Horizontal">
                    <Slider Width="200" VerticalAlignment="Center" />
                    <Slider
                        Width="100"
                        Height="100"
                        Maximum="50"
                        Minimum="-50"
                        Orientation="Vertical"
                        TickFrequency="10"
                        TickPlacement="Outside" />
                </StackPanel>
            </Grid>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;Slider Width=&quot;200&quot; VerticalAlignment=&quot;Center&quot; /&gt;
                            
&lt;Slider
    Width=&quot;100&quot;
    Height=&quot;100&quot;
    Maximum=&quot;50&quot;
    Minimum=&quot;-50&quot;
    Orientation=&quot;Vertical&quot;
    TickFrequency=&quot;10&quot;
    TickPlacement=&quot;Outside&quot; /&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>

        <local:ControlExample HeaderText="With SliderHelper.AcrylicWorkaround, you get Acrylic on the tooltip when you drag the Slider">
            <Grid>
                <essential:AcrylicVisual />
                <StackPanel Orientation="Horizontal">
                    <Slider
                        Width="200"
                        VerticalAlignment="Center"
                        essential:SliderHelper.AcrylicWorkaround="True" />
                    <Slider
                        Width="100"
                        Height="100"
                        essential:SliderHelper.AcrylicWorkaround="True"
                        Maximum="50"
                        Minimum="-50"
                        Orientation="Vertical"
                        TickFrequency="10"
                        TickPlacement="Outside" />
                </StackPanel>
            </Grid>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;Slider
    Width=&quot;200&quot;
    VerticalAlignment=&quot;Center&quot;
    essential:SliderHelper.AcrylicWorkaround=&quot;True&quot; /&gt;
                            
&lt;Slider
    Width=&quot;100&quot;
    Height=&quot;100&quot;
    essential:SliderHelper.AcrylicWorkaround=&quot;True&quot;
    Maximum=&quot;50&quot;
    Minimum=&quot;-50&quot;
    Orientation=&quot;Vertical&quot;
    TickFrequency=&quot;10&quot;
    TickPlacement=&quot;Outside&quot; /&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</Page>
