<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.CalendarDatePickerWorkaroundPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <local:ControlExample HeaderText="Original CalendarDatePicker (from WinUI3 Gallery), you don't have Acrylic">
            <CalendarDatePicker Header="Calendar" PlaceholderText="Pick a date" />
        </local:ControlExample>

        <local:ControlExample HeaderText="Using CalendarDatePicker.AcrylicWorkaround, you got Acrylic">
            <CalendarDatePicker
                essential:CalendarDatePickerHelper.AcrylicWorkaround="True"
                Header="Calendar"
                PlaceholderText="Pick a date" />

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;CalendarDatePicker
    essential:CalendarDatePickerHelper.AcrylicWorkaround=&quot;True&quot;
    Header=&quot;Calendar&quot;
    PlaceholderText=&quot;Pick a date&quot; /&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</Page>
