                        <ListView ItemsSource="{x:Bind Urls}" Visibility="{x:Bind Urls, Converter={StaticResource ContainerToVisibilityConverter}}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:NamedUrl">
