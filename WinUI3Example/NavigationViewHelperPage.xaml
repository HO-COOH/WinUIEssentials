<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.NavigationViewHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <InfoBar
            IsClosable="False"
            IsOpen="True"
            Message="Make the window width smaller to see the NavigationView overflow button." />

        <local:ControlExample HeaderText="Original NavigationView (from WinUI3 Gallery), you don't have Acrylic">
            <local:ControlExample.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </local:ControlExample.Resources>

            <local:ControlExample.Options>
                <RadioButtons Header="Pane position:" SelectedIndex="1">
                    <RadioButton
                        x:Name="nvSample8Left"
                        Checked="pane8PositionLeft_Checked"
                        Content="Left mode" />
                    <RadioButton
                        x:Name="nvSample8Top"
                        Checked="pane8PositionTop_Checked"
                        Content="Top mode" />
                    <RadioButton
                        x:Name="nvSample8LeftCompact"
                        Checked="pane8PositionLeftCompact_Checked"
                        Content="LeftCompact mode"/>
                </RadioButtons>
            </local:ControlExample.Options>

            <NavigationView
                x:Name="nvSample8"
                Height="460"
                IsTabStop="False"
                PaneDisplayMode="Top">
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        Content="Home"
                        Icon="Home"
                        Tag="SamplePage1"
                        ToolTipService.ToolTip="Home" />
                    <NavigationViewItem
                        Content="Account"
                        Icon="Contact"
                        Tag="SamplePage2"
                        ToolTipService.ToolTip="Account">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem
                                Content="Mail"
                                Icon="Mail"
                                Tag="SamplePage3"
                                ToolTipService.ToolTip="Mail" />
                            <NavigationViewItem
                                Content="Calendar"
                                Icon="Calendar"
                                Tag="SamplePage4"
                                ToolTipService.ToolTip="Calendar" />
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>
                    <NavigationViewItem
                        Content="Document options"
                        Icon="Page2"
                        SelectsOnInvoked="False"
                        ToolTipService.ToolTip="Document options">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem
                                Content="Create new"
                                Icon="NewFolder"
                                Tag="SamplePage5"
                                ToolTipService.ToolTip="Create new" />
                            <NavigationViewItem
                                Content="Upload file"
                                Icon="OpenLocal"
                                Tag="SamplePage6"
                                ToolTipService.ToolTip="Upload file" />
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>
                    <NavigationViewItem
                        Content="Browse"
                        Icon="Library"
                        Tag="SamplePage1" />
                    <NavigationViewItem
                        Content="Track an Order"
                        Icon="Map"
                        Tag="SamplePage2" />
                    <NavigationViewItem
                        Content="Order History"
                        Icon="Tag"
                        Tag="SamplePage3" />

                </NavigationView.MenuItems>
                <Frame x:Name="contentFrame8" />
            </NavigationView>
        </local:ControlExample>

        <local:ControlExample HeaderText="Using NavigationViewHelper.AcrylicWorkaround, you got Acrylic">
            <local:ControlExample.Options>
                <RadioButtons Header="Pane position:" SelectedIndex="1">
                    <RadioButton
                        x:Name="nvSample9Left"
                        Checked="pane9PositionLeft_Checked"
                        Content="Left mode"/>
                    <RadioButton
                        x:Name="nvSample9Top"
                        Checked="pane9PositionTop_Checked"
                        Content="Top mode" />
                    <RadioButton
                        x:Name="nvSample9LeftCompact"
                        Checked="pane9PositionLeftCompact_Checked"
                        Content="LeftCompact mode"/>
                </RadioButtons>
            </local:ControlExample.Options>
            <local:ControlExample.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <SolidColorBrush x:Key="ControlExampleDisplayBrush" Color="Transparent" />
                            <SolidColorBrush x:Key="GalleryBackgroundBrush" Color="Transparent" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </local:ControlExample.Resources>
            <NavigationView
                x:Name="nvSample9"
                Height="460"
                essential:NavigationViewHelper.AcrylicWorkaround="True"
                IsTabStop="False"
                PaneDisplayMode="Top">
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        Content="Home"
                        Icon="Home"
                        Tag="SamplePage1"
                        ToolTipService.ToolTip="Home" />
                    <NavigationViewItem
                        Content="Account"
                        Icon="Contact"
                        Tag="SamplePage2"
                        ToolTipService.ToolTip="Account">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem
                                Content="Mail"
                                Icon="Mail"
                                Tag="SamplePage3"
                                ToolTipService.ToolTip="Mail" />
                            <NavigationViewItem
                                Content="Calendar"
                                Icon="Calendar"
                                Tag="SamplePage4"
                                ToolTipService.ToolTip="Calendar" />
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>
                    <NavigationViewItem
                        Content="Document options"
                        Icon="Page2"
                        SelectsOnInvoked="False"
                        ToolTipService.ToolTip="Document options">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem
                                Content="Create new"
                                Icon="NewFolder"
                                Tag="SamplePage5"
                                ToolTipService.ToolTip="Create new" />
                            <NavigationViewItem
                                Content="Upload file"
                                Icon="OpenLocal"
                                Tag="SamplePage6"
                                ToolTipService.ToolTip="Upload file" />
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>
                    <NavigationViewItem
                        Content="Browse"
                        Icon="Library"
                        Tag="SamplePage1" />
                    <NavigationViewItem
                        Content="Track an Order"
                        Icon="Map"
                        Tag="SamplePage2" />
                    <NavigationViewItem
                        Content="Order History"
                        Icon="Tag"
                        Tag="SamplePage3" />

                </NavigationView.MenuItems>
                <Frame x:Name="contentFrame9" />
            </NavigationView>
        </local:ControlExample>
    </StackPanel>

</Page>
