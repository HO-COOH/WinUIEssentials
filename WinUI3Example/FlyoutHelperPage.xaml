<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.FlyoutHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <local:ControlExample HeaderText="Original Flyout (from WinUI 3 Gallery), you don't have Acrylic">
            <Button Content="Empty cart">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,12"
                                Style="{ThemeResource BaseTextBlockStyle}"
                                Text="All items will be removed. Do you want to continue?" />
                            <Button Content="Yes, empty my cart" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </local:ControlExample>

        <local:ControlExample HeaderText="Using FlyoutHelper.AcrylicWorkaround, you got Acrylic">
            <Button Content="Empty cart">
                <Button.Flyout>
                    <Flyout essential:FlyoutHelper.AcrylicWorkaround="True">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,12"
                                Style="{ThemeResource BaseTextBlockStyle}"
                                Text="All items will be removed. Do you want to continue?" />
                            <Button Content="Yes, empty my cart" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;Button Content=&quot;Empty cart&quot;&gt;
    &lt;Button.Flyout&gt;
        &lt;Flyout essential:FlyoutHelper.AcrylicWorkaround=&quot;True&quot;&gt;
            &lt;StackPanel&gt;
                &lt;TextBlock
                    Margin=&quot;0,0,0,12&quot;
                    Style=&quot;{ThemeResource BaseTextBlockStyle}&quot;
                    Text=&quot;All items will be removed. Do you want to continue?&quot; /&gt;
                &lt;Button Content=&quot;Yes, empty my cart&quot; /&gt;
            &lt;/StackPanel&gt;
        &lt;/Flyout&gt;
    &lt;/Button.Flyout&gt;
&lt;/Button&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</Page>
