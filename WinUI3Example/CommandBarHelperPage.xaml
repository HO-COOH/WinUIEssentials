<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.CommandBarHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <local:ControlExample HeaderText="Original CommandBar (from WinUI3 Gallery), you don't have Acrylic with the Secondary menu">
            <CommandBar Background="Transparent" DefaultLabelPosition="Right">
                <AppBarButton Icon="Add" Label="Add" />
                <AppBarButton Icon="Edit" Label="Edit" />
                <AppBarButton Icon="Share" Label="Share" />
                <CommandBar.SecondaryCommands>
                    <AppBarButton Icon="Setting" Label="Settings">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="I" Modifiers="Control" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarButton Icon="Add" Label="Button 1">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="N" Modifiers="Control" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarButton Icon="Delete" Label="Button 2">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Delete" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarSeparator />
                    <AppBarButton Icon="FontDecrease" Label="Button 3">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Subtract" Modifiers="Control" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    <AppBarButton Icon="FontIncrease" Label="Button 4">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Add" Modifiers="Control" />
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;CommandBar Background=&quot;Transparent&quot; DefaultLabelPosition=&quot;Right&quot;&gt;
    &lt;AppBarButton Icon=&quot;Add&quot; Label=&quot;Add&quot; /&gt;
    &lt;AppBarButton Icon=&quot;Edit&quot; Label=&quot;Edit&quot; /&gt;
    &lt;AppBarButton Icon=&quot;Share&quot; Label=&quot;Share&quot; /&gt;
    &lt;CommandBar.SecondaryCommands&gt;
        &lt;AppBarButton Icon=&quot;Setting&quot; Label=&quot;Settings&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;I&quot; Modifiers=&quot;Control&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
        &lt;AppBarButton Icon=&quot;Add&quot; Label=&quot;Button 1&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;N&quot; Modifiers=&quot;Control&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
        &lt;AppBarButton Icon=&quot;Delete&quot; Label=&quot;Button 2&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;Delete&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
        &lt;AppBarSeparator /&gt;
        &lt;AppBarButton Icon=&quot;FontDecrease&quot; Label=&quot;Button 3&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;Subtract&quot; Modifiers=&quot;Control&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
        &lt;AppBarButton Icon=&quot;FontIncrease&quot; Label=&quot;Button 4&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;Add&quot; Modifiers=&quot;Control&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
    &lt;/CommandBar.SecondaryCommands&gt;
&lt;/CommandBar&gt;                            
                        </x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>

        <local:ControlExample HeaderText="Using CommandBarHelper.AcrylicWorkaround, you got Acrylic with the Secondary menu">
