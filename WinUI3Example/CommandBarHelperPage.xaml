            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
        &lt;AppBarButton Icon=&quot;FontIncrease&quot; Label=&quot;Button 4&quot;&gt;
            &lt;AppBarButton.KeyboardAccelerators&gt;
                &lt;KeyboardAccelerator Key=&quot;Add&quot; Modifiers=&quot;Control&quot; /&gt;
            &lt;/AppBarButton.KeyboardAccelerators&gt;
        &lt;/AppBarButton&gt;
    &lt;/CommandBar.SecondaryCommands&gt;
