<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.TimePickerHelperPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <local:ControlExample HeaderText="Original TimePicker (from WinUI3 Gallery), you don't have Acrylic">
            <StackPanel Spacing="8">
                <TextBlock FontWeight="Bold" Text="A simple TimePicker." />
                <TimePicker Header="Pick a time" />

                <TextBlock FontWeight="Bold" Text="A TimePicker with a header and minute increments specified." />
                <TimePicker Header="Arrival time" MinuteIncrement="15" />

                <TextBlock FontWeight="Bold" Text="A TimePicker using a 24-hour clock, initialized to current time." />
                <TimePicker
                    ClockIdentifier="24HourClock"
                    Header="24 hour clock"
                    SelectedTime="{x:Bind local:TimePickerHelperPage.CurrentTime}" />
            </StackPanel>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;TimePicker Header=&quot;Pick a time&quot; /&gt;

&lt;TimePicker Header=&quot;Arrival time&quot; MinuteIncrement=&quot;15&quot; /&gt;

&lt;TimePicker
    ClockIdentifier=&quot;24HourClock&quot;
    Header=&quot;24 hour clock&quot;
    SelectedTime=&quot;{x:Bind local:TimePickerHelperPage.CurrentTime}&quot; /&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>

        <local:ControlExample HeaderText="Using TimePickerHelper.AcrylicWorkaround, you got Acrylic">
            <StackPanel Spacing="8">
                <TextBlock FontWeight="Bold" Text="A simple TimePicker." />
                <TimePicker essential:TimePickerHelper.AcrylicWorkaround="True" Header="Pick a time" />

                <TextBlock FontWeight="Bold" Text="A TimePicker with a header and minute increments specified." />
                <TimePicker
                    essential:TimePickerHelper.AcrylicWorkaround="True"
                    Header="Arrival time"
                    MinuteIncrement="15" />

                <TextBlock FontWeight="Bold" Text="A TimePicker using a 24-hour clock, initialized to current time." />
                <TimePicker
                    essential:TimePickerHelper.AcrylicWorkaround="True"
                    ClockIdentifier="24HourClock"
                    Header="24 hour clock"
                    SelectedTime="{x:Bind local:TimePickerHelperPage.CurrentTime}" />
            </StackPanel>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;TimePicker essential:TimePickerHelper.AcrylicWorkaround=&quot;True&quot; Header=&quot;Pick a time&quot; /&gt;

 &lt;TimePicker
     essential:TimePickerHelper.AcrylicWorkaround=&quot;True&quot;
     Header=&quot;Arrival time&quot;
     MinuteIncrement=&quot;15&quot; /&gt;

 &lt;TimePicker
     essential:TimePickerHelper.AcrylicWorkaround=&quot;True&quot;
     ClockIdentifier=&quot;24HourClock&quot;
     Header=&quot;24 hour clock&quot;
     SelectedTime=&quot;{x:Bind local:TimePickerHelperPage.CurrentTime}&quot; /&gt;
                        </x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</Page>
