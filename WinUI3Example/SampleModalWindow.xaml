<?xml version="1.0" encoding="utf-8" ?>
<essential:ModalWindow
    x:Class="WinUI3Example.SampleModalWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sample Modal Window"
    Activated="ModalWindow_Activated"
    mc:Ignorable="d">

    <StackPanel>
        <Button ToolTipService.ToolTip="Some tooltip">This is a modal window</Button>
        <Button ToolTipService.ToolTip="Second tooltip">This is a second</Button>
    </StackPanel>

</essential:ModalWindow>
