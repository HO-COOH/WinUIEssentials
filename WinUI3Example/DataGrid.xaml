<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="WinUI3Example.DataGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BorderBrush="Red"
    BorderThickness="1"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:MyGridData x:Name="MyData">
            <local:MyGridData.Headers>
                <x:String>Header 1</x:String>
                <x:String>Header 2</x:String>
                <x:String>Header 3</x:String>
            </local:MyGridData.Headers>
        </local:MyGridData>
    </UserControl.Resources>

    <canvas:CanvasControl x:Name="Canvas" Draw="Canvas_Draw" />
</UserControl>
