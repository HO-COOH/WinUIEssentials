<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUI3Example.GroupBoxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:essential="using:WinUI3Package"
    xmlns:local="using:WinUI3Example"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Style="{StaticResource ControlExamplesStackPanelStyle}">
        <local:ControlExample HeaderText="Simple GroupBox">
            <essential:GroupBox Header="Me">
                <Button>Button inside GroupBox</Button>
            </essential:GroupBox>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;essential:GroupBox Header=&quot;Me&quot;&gt;
    &lt;Button&gt;Button inside GroupBox&lt;/Button&gt;
&lt;/essential:GroupBox&gt;
                        </x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>

        <local:ControlExample HeaderText="Comprehensive demo for recreating explorer's Folder Options ">
            <Border
                Width="450"
                Padding="0"
                Background="#F0F0F0"
                BorderBrush="#858585"
                BorderThickness="1"
                CornerRadius="0"
                RequestedTheme="Light">

                <Border.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="FontSize" Value="12" />
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="12" />
                    </Style>
                    <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="CornerRadius" Value="0" />
                        <Setter Property="FontSize" Value="12" />
                    </Style>
                    <Style BasedOn="{StaticResource DefaultComboBoxStyle}" TargetType="ComboBox">
                        <Setter Property="FontSize" Value="12" />
                    </Style>
                    <Style BasedOn="{StaticResource DefaultCheckBoxStyle}" TargetType="CheckBox">
                        <Setter Property="FontSize" Value="12" />
                    </Style>
                </Border.Resources>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Tab strip  -->
                    <StackPanel Margin="2,4,0,0" Orientation="Horizontal">
                        <Border
                            Padding="10,4"
                            Background="#F0F0F0"
                            BorderBrush="#858585"
                            BorderThickness="1,1,1,0"
                            CornerRadius="2,2,0,0">
                            <TextBlock Text="General" />
                        </Border>
                        <Border
                            Margin="2,2,0,2"
                            Padding="10,4"
                            Background="#D4D0C8"
                            BorderBrush="#858585"
                            BorderThickness="1,1,1,0"
                            CornerRadius="2,2,0,0">
                            <TextBlock Text="View" />
                        </Border>
                        <Border
                            Margin="0,2,0,2"
                            Padding="10,4"
                            Background="#D4D0C8"
                            BorderBrush="#858585"
                            BorderThickness="1,1,1,0"
                            CornerRadius="2,2,0,0">
                            <TextBlock Text="Search" />
                        </Border>
                    </StackPanel>

                    <!--  Main content area  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="10,8,10,10"
                        Spacing="10">

                        <!--  Open File Explorer to  -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock VerticalAlignment="Center" Text="Open File Explorer to:" />
                            <ComboBox MinWidth="160" SelectedIndex="0">
                                <x:String>Quick access</x:String>
                                <x:String>This PC</x:String>
                            </ComboBox>
                        </StackPanel>

                        <!--  Browse folders GroupBox  -->
                        <essential:GroupBox
                            Padding="10"
                            FontSize="12"
                            Header="Browse folders">
                            <StackPanel Spacing="6">
                                <RadioButton Content="Open each folder in the same window" IsChecked="True" />
                                <RadioButton Content="Open each folder in its own window" GroupName="BrowseFolders" />
                            </StackPanel>
                        </essential:GroupBox>

                        <!--  Click items as follows GroupBox  -->
                        <essential:GroupBox
                            Padding="10"
                            FontSize="12"
                            Header="Click items as follows">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    FontSize="36"
                                    Foreground="#4A6EA5"
                                    Glyph="&#xED25;" />
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <RadioButton
                                        x:Name="SingleClickRadio"
                                        Content="Single-click to open an item (point to select)"
                                        GroupName="ClickItems" />
                                    <RadioButton
                                        Margin="24,0,0,0"
                                        Content="Underline icon titles consistent with my browser"
                                        GroupName="UnderlineOptions"
                                        IsEnabled="{x:Bind SingleClickRadio.IsChecked.Value, Mode=OneWay}" />
                                    <RadioButton
                                        Margin="24,0,0,0"
                                        Content="Underline icon titles only when I point at them"
                                        IsEnabled="{x:Bind SingleClickRadio.IsChecked.Value, Mode=OneWay}" />
                                    <RadioButton
                                        Content="Double-click to open an item (single-click to select)"
                                        GroupName="ClickItems"
                                        IsChecked="True" />
                                </StackPanel>
                            </Grid>
                        </essential:GroupBox>

                        <!--  Privacy GroupBox  -->
                        <essential:GroupBox
                            Padding="10"
                            FontSize="12"
                            Header="Privacy">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Top"
                                    FontSize="36"
                                    Foreground="#4A6EA5"
                                    Glyph="&#xE8D7;" />
                                <StackPanel Grid.Column="1" Spacing="6">
                                    <CheckBox Content="Show recently used files in Quick access" IsChecked="True" />
                                    <CheckBox Content="Show frequently used folders in Quick access" IsChecked="True" />
                                    <StackPanel
                                        Margin="0,4,0,0"
                                        Orientation="Horizontal"
                                        Spacing="16">
                                        <TextBlock VerticalAlignment="Center" Text="Clear File Explorer history" />
                                        <Button
                                            MinWidth="70"
                                            HorizontalAlignment="Right"
                                            Content="Clear"
                                            CornerRadius="0"
                                            FontSize="12" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </essential:GroupBox>
                        <Button HorizontalAlignment="Right" Content="Restore Defaults" />
                    </StackPanel>

                    <!--  Bottom buttons  -->
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,10,12"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button MinWidth="80" Content="OK" />
                        <Button MinWidth="80" Content="Cancel" />
                        <Button MinWidth="80" Content="Apply" />
                    </StackPanel>
                </Grid>
            </Border>

            <local:ControlExample.Xaml>
                <local:CodeSource>
                    <local:CodeSource.Code>
                        <x:String xml:space="preserve">&lt;Border
    Width=&quot;450&quot;
    Padding=&quot;0&quot;
    Background=&quot;#F0F0F0&quot;
    BorderBrush=&quot;#858585&quot;
