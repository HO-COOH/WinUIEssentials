        &lt;!--  Tab strip  --&gt;
        &lt;StackPanel Margin=&quot;2,4,0,0&quot; Orientation=&quot;Horizontal&quot;&gt;
            &lt;Border
                Padding=&quot;10,4&quot;
                Background=&quot;#F0F0F0&quot;
                BorderBrush=&quot;#858585&quot;
                BorderThickness=&quot;1,1,1,0&quot;
                CornerRadius=&quot;2,2,0,0&quot;&gt;
                &lt;TextBlock Text=&quot;General&quot; /&gt;
            &lt;/Border&gt;
            &lt;Border
                Margin=&quot;2,2,0,2&quot;
                Padding=&quot;10,4&quot;
                Background=&quot;#D4D0C8&quot;
                BorderBrush=&quot;#858585&quot;
                BorderThickness=&quot;1,1,1,0&quot;
                CornerRadius=&quot;2,2,0,0&quot;&gt;
                &lt;TextBlock Text=&quot;View&quot; /&gt;
            &lt;/Border&gt;
            &lt;Border
                Margin=&quot;0,2,0,2&quot;
                Padding=&quot;10,4&quot;
                Background=&quot;#D4D0C8&quot;
                BorderBrush=&quot;#858585&quot;
                BorderThickness=&quot;1,1,1,0&quot;
                CornerRadius=&quot;2,2,0,0&quot;&gt;
                &lt;TextBlock Text=&quot;Search&quot; /&gt;
            &lt;/Border&gt;
        &lt;/StackPanel&gt;

        &lt;!--  Main content area  --&gt;
        &lt;StackPanel
            Grid.Row=&quot;1&quot;
            Margin=&quot;10,8,10,10&quot;
            Spacing=&quot;10&quot;&gt;

            &lt;!--  Open File Explorer to  --&gt;
            &lt;StackPanel Orientation=&quot;Horizontal&quot; Spacing=&quot;8&quot;&gt;
                &lt;TextBlock VerticalAlignment=&quot;Center&quot; Text=&quot;Open File Explorer to:&quot; /&gt;
                &lt;ComboBox MinWidth=&quot;160&quot; SelectedIndex=&quot;0&quot;&gt;
                    &lt;x:String&gt;Quick access&lt;/x:String&gt;
                    &lt;x:String&gt;This PC&lt;/x:String&gt;
                &lt;/ComboBox&gt;
            &lt;/StackPanel&gt;

            &lt;!--  Browse folders GroupBox  --&gt;
            &lt;essential:GroupBox
                Padding=&quot;10&quot;
                FontSize=&quot;12&quot;
                Header=&quot;Browse folders&quot;&gt;
                &lt;StackPanel Spacing=&quot;6&quot;&gt;
                    &lt;RadioButton Content=&quot;Open each folder in the same window&quot; IsChecked=&quot;True&quot; /&gt;
                    &lt;RadioButton Content=&quot;Open each folder in its own window&quot; GroupName=&quot;BrowseFolders&quot; /&gt;
                &lt;/StackPanel&gt;
            &lt;/essential:GroupBox&gt;

            &lt;!--  Click items as follows GroupBox  --&gt;
            &lt;essential:GroupBox
                Padding=&quot;10&quot;
                FontSize=&quot;12&quot;
                Header=&quot;Click items as follows&quot;&gt;
                &lt;Grid&gt;
                    &lt;Grid.ColumnDefinitions&gt;
                        &lt;ColumnDefinition Width=&quot;Auto&quot; /&gt;
                        &lt;ColumnDefinition Width=&quot;*&quot; /&gt;
                    &lt;/Grid.ColumnDefinitions&gt;
                    &lt;FontIcon
                        Margin=&quot;0,0,10,0&quot;
                        VerticalAlignment=&quot;Top&quot;
                        FontSize=&quot;36&quot;
                        Foreground=&quot;#4A6EA5&quot;
                        Glyph=&quot;&amp;#xED25;&quot; /&gt;
                    &lt;StackPanel Grid.Column=&quot;1&quot; Spacing=&quot;4&quot;&gt;
                        &lt;RadioButton
                            x:Name=&quot;SingleClickRadio&quot;
                            Content=&quot;Single-click to open an item (point to select)&quot;
                            GroupName=&quot;ClickItems&quot; /&gt;
                        &lt;RadioButton
                            Margin=&quot;24,0,0,0&quot;
                            Content=&quot;Underline icon titles consistent with my browser&quot;
                            GroupName=&quot;UnderlineOptions&quot;
                            IsEnabled=&quot;{x:Bind SingleClickRadio.IsChecked.Value, Mode=OneWay}&quot; /&gt;
                        &lt;RadioButton
                            Margin=&quot;24,0,0,0&quot;
                            Content=&quot;Underline icon titles only when I point at them&quot;
                            IsEnabled=&quot;{x:Bind SingleClickRadio.IsChecked.Value, Mode=OneWay}&quot; /&gt;
                        &lt;RadioButton
                            Content=&quot;Double-click to open an item (single-click to select)&quot;
                            GroupName=&quot;ClickItems&quot;
                            IsChecked=&quot;True&quot; /&gt;
                    &lt;/StackPanel&gt;
                &lt;/Grid&gt;
            &lt;/essential:GroupBox&gt;

            &lt;!--  Privacy GroupBox  --&gt;
            &lt;essential:GroupBox
                Padding=&quot;10&quot;
                FontSize=&quot;12&quot;
                Header=&quot;Privacy&quot;&gt;
                &lt;Grid&gt;
                    &lt;Grid.ColumnDefinitions&gt;
                        &lt;ColumnDefinition Width=&quot;Auto&quot; /&gt;
                        &lt;ColumnDefinition Width=&quot;*&quot; /&gt;
                    &lt;/Grid.ColumnDefinitions&gt;
                    &lt;FontIcon
                        Margin=&quot;0,0,10,0&quot;
                        VerticalAlignment=&quot;Top&quot;
                        FontSize=&quot;36&quot;
                        Foreground=&quot;#4A6EA5&quot;
                        Glyph=&quot;&amp;#xE8D7;&quot; /&gt;
                    &lt;StackPanel Grid.Column=&quot;1&quot; Spacing=&quot;6&quot;&gt;
                        &lt;CheckBox Content=&quot;Show recently used files in Quick access&quot; IsChecked=&quot;True&quot; /&gt;
                        &lt;CheckBox Content=&quot;Show frequently used folders in Quick access&quot; IsChecked=&quot;True&quot; /&gt;
                        &lt;StackPanel
                            Margin=&quot;0,4,0,0&quot;
                            Orientation=&quot;Horizontal&quot;
                            Spacing=&quot;16&quot;&gt;
                            &lt;TextBlock VerticalAlignment=&quot;Center&quot; Text=&quot;Clear File Explorer history&quot; /&gt;
                            &lt;Button
                                MinWidth=&quot;70&quot;
                                HorizontalAlignment=&quot;Right&quot;
                                Content=&quot;Clear&quot;
                                CornerRadius=&quot;0&quot;
                                FontSize=&quot;12&quot; /&gt;
                        &lt;/StackPanel&gt;
                    &lt;/StackPanel&gt;
                &lt;/Grid&gt;
            &lt;/essential:GroupBox&gt;
            &lt;Button HorizontalAlignment=&quot;Right&quot; Content=&quot;Restore Defaults&quot; /&gt;
        &lt;/StackPanel&gt;

        &lt;!--  Bottom buttons  --&gt;
        &lt;StackPanel
            Grid.Row=&quot;2&quot;
            Margin=&quot;0,0,10,12&quot;
            HorizontalAlignment=&quot;Right&quot;
            Orientation=&quot;Horizontal&quot;
            Spacing=&quot;8&quot;&gt;
            &lt;Button MinWidth=&quot;80&quot; Content=&quot;OK&quot; /&gt;
            &lt;Button MinWidth=&quot;80&quot; Content=&quot;Cancel&quot; /&gt;
            &lt;Button MinWidth=&quot;80&quot; Content=&quot;Apply&quot; /&gt;
        &lt;/StackPanel&gt;
    &lt;/Grid&gt;
&lt;/Border&gt;</x:String>
                    </local:CodeSource.Code>
                </local:CodeSource>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</Page>
